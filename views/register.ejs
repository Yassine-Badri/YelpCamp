<% include ./partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;">Sign Up</h1>
        
        <div style="width: 40%; margin: 30px auto;">
            <form action="/register" method="POST">

                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>

                <div class="form-group">
                    <label for="username">Email</label>
                    <input class="form-control" type="email" name="email" placeholder="joedoe@gmail.com">
                </div>

                <div class="form-group">
                    <label for="username">Avatar</label>
                    <input class="form-control" type="text" name="avatar" placeholder="Avatar Url">
                </div>
                
                <div class="form-group">
                    <label for="bio">Bio (optional)</label>
                     <textarea class="form-control" rows="5" id="bio"></textarea>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                
                <div class="form-group">
                    <label for="admincode">Enter code if you are an admin</label>
                    <input class="form-control" type="password" name="admincode" placeholder="Admin Code">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary">Sign Up!</button>
                </div>

                <a href="/campgrounds">Go Back</a>

            </form>
        </div>

    </div>
</div>

<% include ./partials/footer %>