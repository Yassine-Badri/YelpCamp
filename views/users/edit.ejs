<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Update <%=  user.username %></h1>
        
        <div style="width: 40%; margin: 30px auto;">
            <form action="/user/<%= user._id %>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <label for="user[avatar]">Avatar</label>
                    <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
                </div>
                
                <div class="form-group">
                    <label for="user[email]">Email</label>
                    <input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
                </div>
                
                <div class="form-group">
                    <label for="user[bio]">Bio</label>
                    <input class="form-control" type="text" name="user[bio]" value="<%= user.bio %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

                <a href="/campgrounds">Go Back</a>

            </form>

        </div>
    </div>
    
</div>

<% include ../partials/footer %>